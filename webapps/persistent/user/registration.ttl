@prefix xsd:<http://www.w3.org/2001/XMLSchema#>.
@prefix rdf:<http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs:<http://www.w3.org/2000/01/rdf-schema#>.
@prefix owl:<http://www.w3.org/2002/07/owl#>.
@prefix skos:<http://www.w3.org/2004/02/skos/core#>.
@prefix dc:<http://purl.org/dc/elements/1.1/>.
@prefix dcterms:<http://purl.org/dc/terms/>.
@prefix obj:<http://www.openrdf.org/rdf/2009/object#>.
@prefix http:<http://www.openrdf.org/rdf/2009/httpobject#>.
@prefix calli:<http://callimachusproject.org/rdf/2009/framework#>.
@prefix purl:<http://persistent.name/rdf/2010/purl#>.

# Linked from home page
purl:register rdfs:subClassOf obj:Message;
	rdfs:subClassOf [owl:onProperty obj:target;
		owl:allValuesFrom purl:UserTemplate];
	rdfs:subClassOf [owl:onProperty obj:functionalObjectResponse;
		owl:allValuesFrom <java:java.io.Reader>];
	http:operation "register";
	http:type "text/html";
	http:realm <../anybody>;
	obj:imports <java:org.openrdf.http.object.exceptions.InternalServerError>;
	obj:groovy """
		def template = findCopyTemplate()
		if (template == null)
			throw new InternalServerError("Missing Copy Template")
		return template.calliConstruct('copy', this)
	""".

# Creates new user and resets their password
purl:post-register rdfs:subClassOf obj:Message;
	rdfs:subClassOf [owl:onProperty obj:target;
		owl:allValuesFrom purl:UserTemplate];
	rdfs:subClassOf [owl:onProperty obj:functionalObjectResponse;
		owl:allValuesFrom <java:org.apache.http.HttpResponse>];
	http:method "POST";
	http:operation "register";
	http:type "message/x-response";
	http:realm <../anybody>;
	obj:imports <../authority>;
	obj:imports <password-sent.xml>;
	obj:imports <java:org.apache.commons.codec.digest.DigestUtils>;
	obj:imports <java:org.openrdf.http.object.exceptions.BadRequest>;
	obj:imports <java:org.apache.http.ProtocolVersion>;
	obj:imports <java:org.apache.http.message.BasicHttpResponse>;
	obj:imports <java:org.openrdf.http.object.exceptions.InternalServerError>;
	obj:groovy """
		def template = findCopyTemplate()
		if (template == null)
			throw new InternalServerError("Missing Copy Template")
		def user = template.calliCopyResource(this, msg.in, findCopyNamespaces())
		if (!user.purlEmail)
			throw new BadRequest("Missing Email Address")
		if (calliCurators) {
			user.calliMaintainers.addAll(calliCurators)
		} else {
			user.calliMaintainers.addAll(findScribe(user))
		}
		authority.calliCredentials.add(user)
		def ver = new ProtocolVersion("HTTP", 1, 1)
		def resp = new BasicHttpResponse(ver, 202, "Accepted")
		resp.setHeader("Location", passwordSentXml.toString() + "?construct")
		user.purlResetPassword()
		return resp
	""".

purl:post-register-in a owl:ObjectProperty, owl:FunctionalProperty;
	rdfs:domain purl:post-register;
	rdfs:range <java:java.io.InputStream>;
	http:type "application/rdf+xml";
	obj:name "in".

