<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../template.xsl"?>
<html>
	<head>
		<title>Reset Password</title>
		<link rel="view" title="View" target="_self" href="?view" />
		<link rel="edit" title="Edit" target="_self" href="?edit" />
		<link rel="review" title="History" target="_self" href="?review" />
		<link rel="help" title="Help" target="help" href="/persistent/docs/user.html" />
		<script>
			// <![CDATA[
			function parameter(name) {
				var regex = new RegExp("[\\?&]"+name+"=([^&#]*)")
				return regex.exec(location.href)[1];
			}
			function init() {
				document.getElementById("nonce").value = parameter("nonce")
				document.getElementById("token").value = parameter("token")
			}
			// ]]>
		</script>
	</head>
	<body class="user" onload="init()">
		<form method="POST" action="?reset-password">
			<input type="hidden" name="nonce" id="nonce" />
			<input type="hidden" name="token" id="token" />
			<button type="submit">Reset Password</button>
		</form>
	</body>
</html>
