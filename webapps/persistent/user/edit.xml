<html xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
	xmlns:rdfs="http://www.w3.org/2000/01/rdf-schema#"
	xmlns:calli="http://callimachusproject.org/rdf/2009/framework#"
	xmlns:xsd="http://www.w3.org/2001/XMLSchema#"
	xmlns:purl="http://persistent.name/rdf/2010/purl#">
	<head>
		<title property="rdfs:label"/>
	</head>
	<body class="user">
		<form action="" about="">
			<fieldset>
				<legend>Modify a user</legend>
				<p class="instructions">Modify any of the following user information.</p>
				<table class="actiontable">
					<tbody>
						<tr>
							<td class="property">
								<label for="m_name">Full name:</label>
							</td>
							<td class="value" data-cardinality="1">
								<input id="m_name" property="rdfs:label" type="text" />
							</td>
						</tr>
						<tr>
							<td class="property">
								<label for="m_email">E-mail address:</label>
							</td>
							<td class="value" data-cardinality="1">
								<input id="m_email" property="purl:email" type="text" />
							</td>
						</tr>
						<tr>
							<td class="property">
								<label for="m_affiliation">Affiliation:</label>
							</td>
							<td class="value">
								<input id="m_affiliation" property="purl:affiliation"
									type="text" />
							</td>
						</tr>
						<tr>
							<td class="property">
								<label for="m_justification">Justification:</label>
							</td>
							<td class="value">
								<textarea rows="5" cols="40" id="m_justification"
									property="purl:justification">
								</textarea>
							</td>
						</tr>
						<tr>
							<td class="property">
								<label for="m_reviewer">Reviewers:</label>
							</td>
							<td rel="calli:reviewer" class="value" data-suggest="/persistent/user/template?pre-copy">
								<span about="?reviewer" typeof="purl:User">
									<span property="rdfs:label"/>
								</span>
							</td>
						</tr>
						<tr class="hidden">
							<td class="property"/>
							<td class="value" data-cardinality="1">
								<input id="m_username" property="calli:name" type="hidden" />
							</td>
						</tr>
					</tbody>
				</table>
				<input value="Delete" type="button" onclick="location.href='?delete'" />
				<input value="Save" type="submit" />
				<br />
			</fieldset>
		</form>
	</body>
</html>
