<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." default="all" name="Gatekeeper Test Module">
	
	<target name="init">
		<property file="./version.properties"/>
		<echo message="Building: ${test-mod-purl-gatekeeper-name} version ${test-mod-purl-gatekeeper-version}"/>
		<property name="app" value="${test-mod-purl-gatekeeper-name}"/>
		<property name="version" value="${test-mod-purl-gatekeeper-version}"/>
		<property name="base" value=".."/>
		<property name="lib" value="${base}/lib"/>
		<property name="src" value="${base}/modules/test-mod-purl-gatekeeper/"/>
		<property name="dst" value="${src}"/>
		<property name="dist.dir" value="../../dist"/>
	</target>
    
    <target depends="init" name="compile">
        <javac debug="true" deprecation="true" destdir="${dst}" srcdir="${src}">
            <classpath>
				<fileset dir="${lib}">
					<include name="**/*.jar"/>
				</fileset>
            </classpath>
        </javac>
    </target>
	
    <target depends="init,compile" name="jar">
        <jar basedir="${dst}" compress="true" destfile="${dist.dir}/${app}-${version}.jar">
	    <include name="**/*"/>
	    <exclude name="**/.nbattrs*"/>
        </jar>
    </target>
	
	<target depends="init,clean, build, jar" description="Build everything." name="all">
        <echo message="${app}  built."/>
    </target>
	
	<target depends="init,clean,compile" description="Build." name="build">
        <echo message="${app} built."/>
    </target>
		
    <target depends="init" description="Clean all build products." name="clean">
        <delete>
            <fileset dir="${dst}">
                <include name="**/*.class"/>
            </fileset>
        </delete>
    </target>

</project>
